<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="p_probabilistic"
        android:title="@string/pref_title_probabilistic"
        android:summary="@string/pref_description_probabilistic"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="p_options"
        android:title="@string/pref_title_options"
        android:summary="@string/pref_description_options"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="p_threats"
        android:title="@string/pref_title_threats"
        android:summary="@string/pref_description_threats"
        android:defaultValue="true" />
    <ListPreference
        android:key="p_gametype"
        android:title="@string/pref_title_gametype"
        android:defaultValue="0"
        android:entries="@array/pref_gametype_listtitles"
        android:entryValues="@array/pref_gametype_listvalues"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
</PreferenceScreen>