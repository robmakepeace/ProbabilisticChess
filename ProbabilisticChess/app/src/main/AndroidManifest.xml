<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jbstrand.probabilisticchess">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/pb_icon" android:theme="@style/AppTheme">

        <activity
            android:name="com.example.jbstrand.probabilisticchess.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.jbstrand.probabilisticchess.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.example.jbstrand.probabilisticchess.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jbstrand.probabilisticchess.MainActivity" />
        </activity>
        <activity
            android:name="com.example.jbstrand.probabilisticchess.RulesActivity"
            android:label="@string/title_activity_rules"
            android:parentActivityName="com.example.jbstrand.probabilisticchess.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jbstrand.probabilisticchess.MainActivity" />
        </activity>
        <activity
            android:name="com.example.jbstrand.probabilisticchess.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.example.jbstrand.probabilisticchess.MainActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jbstrand.probabilisticchess.MainActivity" />
        </activity>
        <activity
            android:name="com.example.jbstrand.probabilisticchess.OpenGLES20"
            android:label="@string/title_activity_open_gles20" >
        </activity>
        <activity
            android:name="com.example.jbstrand.probabilisticchess.AugmentedReality"
            android:label="@string/title_activity_augmented_reality"
            android:parentActivityName="com.example.jbstrand.probabilisticchess.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jbstrand.probabilisticchess.MainActivity" />
        </activity>
    </application>
</manifest>
